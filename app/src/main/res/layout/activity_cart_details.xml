<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:orientation="vertical"
    tools:context="com.kushagra.beerorder.CartDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
android:background="#3CB371"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_marginTop="8sp"
            android:src="@drawable/beer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/movie_title" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="12sp"
                android:textStyle="bold"
                android:layout_marginRight="32dp"
                android:text="Your Heading"
                android:textAppearance="?android:textAppearanceLarge" />
    </LinearLayout>
            <TextView
                android:id="@+id/style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Style"

                android:paddingTop="12dp"
                android:textAppearance="?android:textAppearanceMedium" />
    <TextView
        android:id="@+id/productId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
        android:textAppearance="?android:textAppearanceMedium" />


    <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:padding="6dp"
                android:id="@+id/belowStyleLine"
                android:layout_below="@id/style"/>
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/belowStyleLine"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:paddingTop="6dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
                android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/bitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
        android:textAppearance="?android:textAppearanceMedium" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="20sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:text="Quantity :"
        android:textAppearance="?android:textAppearanceLarge" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/minus"
        android:elevation="16dp"




        android:layout_centerHorizontal="true"

        android:background="@drawable/black_minus"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="20dp"
        android:text="Your Heading"
        android:textAppearance="?android:textAppearanceLarge" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/plus"


        android:elevation="16dp"



        android:layout_centerHorizontal="true"

        android:background="@drawable/plus_black"
        />
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/addToCart"


                android:layout_marginTop="20dp"

                android:layout_centerHorizontal="true"

                android:background="@drawable/add_cart"
                />
</RelativeLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
